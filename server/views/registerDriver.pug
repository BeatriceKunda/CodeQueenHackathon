<!DOCTYPE html>
html(lang="en")

head 
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/bootstrap-4.4.1-dist/css/bootstrap.css")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    script(src="js/registration.js")
    link(rel="stylesheet" href="/css/registration.css")
    link(rel="stylesheet" href="/css/styles.css")
    title Register Driver | Safe Boda Registration

body
    .container#driver
        .card
            .card-body
                form.form-horizontal#contact_form.register-driver
                    fieldset
                        center
                            img(src="images/safe3logo.png" alt="logo")
                            h2
                                strong Driver Registration
                        .form-group.row
                            label.col-md-3.control-label Driver Name:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-user.icon
                                    input.form-control(name="name", placeholder="Driver's Name", type="text", id="name")
                        .form-group.row
                            label.col-md-3.control-label Boda stage address:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-road.icon
                                    input.form-control(name="stage", placeholder="Boda stage Address", type="text", id="stage")
                        .form-group.row
                            label.col-md-3.control-label National ID Number:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-building.icon
                                    input.form-control(name="natIDnum", placeholder="National ID number", type="text", id="natIdNumber")            
                        .form-group.row
                            label.col-md-3.control-label Driver's Contact:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-phone.icon
                                    input.form-control(name="number", placeholder="Driver's Contact", type="text", id="phoneNumber")            
                        .form-group.row
                            label.col-md-3.control-label Age:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-user.icon
                                    input.form-control(name="age", placeholder="Driver's Age", type="number", id="age")
                        .form-group.row
                            label.col-md-3.control-label Recruitment station:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-road.icon
                                    input.form-control(name="station", placeholder="Recruitment station/address", type="text", id="recruitmentAddr")
                        .form-group.row
                            label.col-md-3.control-label Referred by:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-user.icon
                                    input.form-control(name="referred by", placeholder="Referred by", type="text", id="referredBy")
                        .form-group.row
                            label.col-md-3.control-label Next of Kin:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-user.icon
                                    input.form-control(name="nextOfKin", placeholder="Next of Kin", type="text", id="nextOfKin")
                        .form-group.row
                            label.col-md-3.control-label Next of Kin Contact:
                            .col-md-7.inputGroupContainer
                                .input-group
                                    i.fa.fa-phone.icon
                                    input.form-control(name="nextOfKinContact", placeholder="Next of Kin Contact", type="text", id="nextOfKinContact")
                        .buton
                            button.btn(type="submit") SUBMIT

script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js")