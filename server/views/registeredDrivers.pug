<!DOCTYPE html>
html(lang="en")

head 
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/bootstrap-4.4.1-dist/css/bootstrap.css")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="/css/dashboard.css")
    script(type="text/javascript" src="https://www.gstatic.com/charts/loader.js")
    script(src="/js/pie.js")
    srcipt(src="/js/table.js")
    script(src="/js/line.js")
    title registered Drivers | Safe Boda Registration

body
    #container-fluid
        .row
            .col-lg-3
                #sideMenu
                    img(src="/images/logo.png" alt="logo")
                    ul.menu
                        a(href="/dashboard")
                            li Dashboard
                    ul.dropdown.menu
                        li Registrations
                        .dropdown-content
                            a(href="/register-driver") Register Driver
                            a(href="/register-recruiter") Register Recruiter
                    
                    ul.dropdown.menu
                        li Onboarding stages
                        .dropdown-content
                            a(href="/registered-drivers") Registered drivers
                            a(href="/in-training") In Training
                            a(href="/ready-for-activation") Ready for activation
                    ul.menu
                        a.logout.logout-btn
                            li Logout
            
            .col-lg-8
                #titleBar
                    h2 Registered Drivers
                    #profilePic
                        img(src="/images/admin.png", alt="", srcset="")
                
                #totalSales
                    .content.table-full-width
                        table.table.table-hover(data-toggle="table", id="table", data-search="true", data-filter-control="true", data-show-export="true", data-click-to-select="true", data-toolbar="#toolbar")
                            h3 Registered Drivers
                            button.btn.btn-warning(onclick="exportTableToExcel('table', 'members-data')")
                                i.fa.fa-download
                            thead
                                tr
                                    th(data-field="name", data-checkbox="true") Name
                                    th(data-field="Id", data-filter-control="input", data-sortable="true") Stage
                                    th(data-field="phone number", data-filter-control="select", data-sortable="true") Phone Number
                                    th(data-field="Action", data-filter-control="select", data-sortable="true") Action
                            tbody
                                each driver in drivers
                                    tr
                                        td= driver.name
                                        td= driver.stage
                                        td= driver.phoneNumber
                                        td
                                            a.btn.btn-primary(href=`/driver/view/${driver._id}`)
                                                i.fa.fa-eye
                                            //- button.btn.btn-danger(type="button")
                                            //-     i.fa.fa-trash
                                .btn Sort by Date

script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js")
script(src="bootstrap-4.4.1-dist/js/bootstrap.min.js")
script(src="/js/login.js")
